{
  "name": "kurukshetra-server",
  "version": "1.0.0",
  "description": "An intentionally vulnerable backend for cybersecurity training",
  "main": "server.js",
  "scripts": {
    "start": "node utils/setup.js && node utils/migrate.js && node server.js",
    "setup": "node utils/setup.js",
    "migrate": "node utils/migrate.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:sqlite": "cross-env NODE_ENV=development DB_TYPE=sqlite nodemon server.js",
    "dev:mongo": "cross-env NODE_ENV=development DB_TYPE=mongodb nodemon server.js",
    "db:reset": "node scripts/reset-db.js",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:vulns": "cross-env NODE_ENV=test jest --testMatch='**/tests/*.test.js' --setupFiles='./tests/setup.js'",
    "test:auth": "cross-env NODE_ENV=test jest --testMatch='**/tests/auth.test.js'",
    "test:injection": "cross-env NODE_ENV=test jest --testMatch='**/tests/injection.test.js'",
    "test:access": "cross-env NODE_ENV=test jest --testMatch='**/tests/access-control.test.js'",
    "test:rce": "cross-env NODE_ENV=test jest --testMatch='**/tests/rce-ssrf.test.js'"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}

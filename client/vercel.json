{
  "version": 2,

  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],

  "buildCommand": "cd client && npm install && npm run build",

  "outputDirectory": "client/build",

  "framework": "create-react-app",

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "routes": [
    {
      "handle": "filesystem" 
    },
    {
      "src": "/.*",          
      "dest": "/index.html"
    }
  ]
}

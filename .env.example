# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL for CORS
CLIENT_URL=http://localhost:1000

# Database Configuration 
DB_PATH=./database/kurukshetra.sqlite

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# Session and Cookie Configuration
SESSION_SECRET=your-session-secret

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Security Configuration (Intentionally Weak)
SALT_ROUNDS=1
CORS_ORIGIN=*

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@vulnerable.app
ADMIN_API_KEY=admin-api-key-1234567890

# Regular User Configuration
USER_USERNAME=user
USER_PASSWORD=password123
USER_EMAIL=user@vulnerable.app

# Enable/Disable Vulnerability Modules (true/false)
# A01: Broken Access Control
ENABLE_BROKEN_ACCESS_CONTROL=true
ENABLE_IDOR=true
ENABLE_CSRF=true
ENABLE_CORS_MISCONFIG=true

# A02: Cryptographic Failures
ENABLE_WEAK_CRYPTO=true
ENABLE_HARDCODED_SECRETS=true
ENABLE_CLEAR_TEXT_STORAGE=true

# A03: Injection
ENABLE_SQL_INJECTION=true
ENABLE_NOSQL_INJECTION=true
ENABLE_COMMAND_INJECTION=true
ENABLE_XSS=true
ENABLE_XXE=true

# A04: Insecure Design
ENABLE_INSECURE_DESIGN=true
ENABLE_SECURITY_QUESTIONS=true

# A05: Security Misconfiguration
ENABLE_SECURITY_MISCONFIG=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_DIRECTORY_LISTING=true

# A06: Vulnerable and Outdated Components
ENABLE_VULNERABLE_COMPONENTS=true

# A07: Authentication Failures
ENABLE_WEAK_PASSWORDS=true
ENABLE_MFA_BYPASS=true
ENABLE_SESSION_FIXATION=true

# A08: Software and Data Integrity Failures
ENABLE_UNVERIFIED_UPDATES=true
ENABLE_INSECURE_DESERIALIZATION=true

# A09: Logging and Monitoring Failures
ENABLE_LOG_INJECTION=true
ENABLE_INSUFFICIENT_LOGGING=true

# A10: SSRF
ENABLE_SSRF=true
ENABLE_WEBHOOKS=true

# WARNING: This is a vulnerable application for training purposes
# DO NOT use these settings in production environments
